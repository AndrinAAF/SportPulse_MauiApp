<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportPulse.Views.InfoPage"
             BackgroundColor="#2B2B2B"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">

        <!-- Header / AppBar -->
        <Grid x:Name="HeaderGrid" BackgroundColor="#880A21" Padding="0" ColumnDefinitions="Auto, *" Row="0" HeightRequest="56">
            <Frame Padding="0" HasShadow="False" CornerRadius="6"
                   BackgroundColor="#ffffff22"
                   VerticalOptions="Fill" HorizontalOptions="Start"
                   HeightRequest="{Binding Source={x:Reference HeaderGrid}, Path=Height}">
                <Image Source="icon.png" Aspect="AspectFit" 
                       HeightRequest="{Binding Source={x:Reference HeaderGrid}, Path=Height}"
                       VerticalOptions="Fill" HorizontalOptions="Start"/>
            </Frame>

            <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Grid.Column="1" Padding="12,18,12,18">
                <Label Text="Info" TextColor="White" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                <StackLayout Orientation="Horizontal" Spacing="8" VerticalOptions="Center" HorizontalOptions="End">
                </StackLayout>
            </StackLayout>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="24">

                <!-- Logo & Version Header -->
                <VerticalStackLayout Spacing="12" HorizontalOptions="Center" Margin="0,16,0,0">
                    <Frame WidthRequest="120" 
                           HeightRequest="120" 
                           CornerRadius="60" 
                           Padding="0" 
                           HasShadow="False"
                           BackgroundColor="Transparent"
                           BorderColor="#880A21"
                           HorizontalOptions="Center"
                           IsClippedToBounds="True">
                        <Image Source="icon_square.png" 
                               Aspect="AspectFill" 
                               WidthRequest="120" 
                               HeightRequest="120"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>
                    <Label Text="SportPulse" 
                           TextColor="White" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                    <Label Text="Version 1.0.0" 
                           TextColor="#999999" 
                           FontSize="14" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Über SportPulse -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Über SportPulse" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <Label TextColor="#CCCCCC" 
                                   FontSize="14" 
                                   LineHeight="1.4">
                                <Label.Text>
                                    SportPulse zeigt aktuelle Resultate, Tabellen und Statistiken aus verschiedenen Sportarten. Ziel ist es, Nutzer schnell und übersichtlich über die neuesten Sportereignisse zu informieren. Die App wird unterwegs, zu Hause oder während Sportübertragungen genutzt.
                                </Label.Text>
                            </Label>
                            
                            <BoxView HeightRequest="1" Color="#555555"/>
                            
                            <VerticalStackLayout Spacing="8">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label TextColor="#CCCCCC" FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Entwickelt von: " TextColor="#999999"/>
                                                <Span Text="Smash Bros GmbH, Bern" TextColor="White" FontAttributes="Bold"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label TextColor="#CCCCCC" FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Für: " TextColor="#999999"/>
                                                <Span Text="Sportvereine, Medienunternehmen und sportinteressierte Privatnutzer" TextColor="White"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label TextColor="#CCCCCC" FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Hauptgeschäftsfeld: " TextColor="#999999"/>
                                                <Span Text="Digitale Informations- und Analyseplattformen für Sport" TextColor="White"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Features -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Features" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    
                    <!-- Live-Ergebnisse -->
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="⚡" FontSize="32" VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Live-Ergebnisse in Echtzeit" 
                                       TextColor="White" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="Aktuelle Resultate verschiedener Sportarten in Echtzeit abrufen" 
                                       TextColor="#CCCCCC" 
                                       FontSize="13"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                    
                    <!-- Favoriten-System -->
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="⭐" FontSize="32" VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Favoriten-System" 
                                       TextColor="White" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="Teams oder Sportarten als Favoriten markieren für schnelleren Zugriff" 
                                       TextColor="#CCCCCC" 
                                       FontSize="13"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                    
                    <!-- Sportarten-Auswahl -->
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="🔍" FontSize="32" VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Sportarten-Auswahl und Filter" 
                                       TextColor="White" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="Ergebnisse nach Sportart, Liga oder Team filtern" 
                                       TextColor="#CCCCCC" 
                                       FontSize="13"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                    
                    <!-- Push-Benachrichtigungen -->
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="🔔" FontSize="32" VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Push-Benachrichtigungen" 
                                       TextColor="White" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                <Label Text="Wichtige Spielereignisse wie Tore, Matchende per Notification" 
                                       TextColor="#CCCCCC" 
                                       FontSize="13"
                                       LineHeight="1.3"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Zielgruppe -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Zielgruppe" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <Label TextColor="#CCCCCC" 
                                   FontSize="14" 
                                   LineHeight="1.4">
                                <Label.Text>
                                    Sportinteressierte Personen zwischen 14-40 Jahren, mit Fokus auf junge Männer. Technisch versiert, verfolgen regelmäßig Sportereignisse (Fußball, Motorsport, Eishockey, Basketball).
                                </Label.Text>
                            </Label>
                            
                            <BoxView HeightRequest="1" Color="#555555"/>
                            
                            <VerticalStackLayout Spacing="8">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="Aktive Sportfans oder selbst in Vereinen tätig" 
                                           TextColor="#CCCCCC" 
                                           FontSize="14"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="Leben in urbanen Gebieten" 
                                           TextColor="#CCCCCC" 
                                           FontSize="14"/>
                                </HorizontalStackLayout>
                                
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="•" TextColor="#880A21" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="Konsumieren Sportinhalte regelmäßig über digitale Medien" 
                                           TextColor="#CCCCCC" 
                                           FontSize="14"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Kontakt & Support -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Kontakt &amp; Support" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    
                    <Frame BackgroundColor="#3B3B3B" 
                           CornerRadius="8" 
                           Padding="16"
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <!-- Email -->
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="📧" FontSize="24" VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Email" 
                                           TextColor="#999999" 
                                           FontSize="12"/>
                                    <Label Text="support@sportpulse.com" 
                                           TextColor="#880A21" 
                                           FontSize="14"
                                           TextDecorations="Underline">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnEmailTapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            
                            <BoxView HeightRequest="1" Color="#555555"/>
                            
                            <!-- Website -->
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="🌐" FontSize="24" VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Website" 
                                           TextColor="#999999" 
                                           FontSize="12"/>
                                    <Label Text="www.sportpulse.com" 
                                           TextColor="#880A21" 
                                           FontSize="14"
                                           TextDecorations="Underline">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnWebsiteTapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            
                            <BoxView HeightRequest="1" Color="#555555"/>
                            
                            <!-- Firma -->
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="🏢" FontSize="24" VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Firma" 
                                           TextColor="#999999" 
                                           FontSize="12"/>
                                    <Label Text="Smash Bros GmbH, Bern" 
                                           TextColor="White" 
                                           FontSize="14"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            
                            <BoxView HeightRequest="1" Color="#555555"/>
                            
                            <!-- Social Media -->
                            <HorizontalStackLayout Spacing="12">
                                <Label Text="📱" FontSize="24" VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="2" VerticalOptions="Center">
                                    <Label Text="Social Media" 
                                           TextColor="#999999" 
                                           FontSize="12"/>
                                    <Label Text="@SportPulseApp" 
                                           TextColor="#880A21" 
                                           FontSize="14"
                                           TextDecorations="Underline">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnSocialMediaTapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Footer Info -->
                <VerticalStackLayout Spacing="8" Margin="0,8,0,16">
                    <Label Text="© 2025 Smash Bros GmbH. Alle Rechte vorbehalten." 
                           TextColor="#666666" 
                           FontSize="12" 
                           HorizontalOptions="Center"/>
                    <Label Text="Made with ❤️ in Bern, Switzerland."
                           TextColor="#666666" 
                           FontSize="12" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Spacer for nav bar -->
                <BoxView HeightRequest="56" Color="Transparent"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>